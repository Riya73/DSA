class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        int shortage = 0;
        int currBalance = 0;
        int start = 0;

        for(int i = 0; i<gas.length; i++){
            currBalance += (gas[i]-cost[i]);
            if(currBalance<0){
                shortage += currBalance;
                start = i+1;
                currBalance = 0;
            }
        }
        if(shortage + currBalance >= 0){
            return start;
        }
        return -1;
    }
}
